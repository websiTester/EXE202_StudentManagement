@using Microsoft.AspNetCore.Identity
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Introduction";
}

<!-- Hero Section -->
<section class="py-5 text-white" style="background: linear-gradient(135deg, #6366f1, #8b5cf6);">
    <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-between">
        <div class="text-center text-lg-start">
            <h1 class="display-4 fw-bold">Chào mừng đến với <span class="text-warning">Viroom</span></h1>
            <p class="lead mt-3">Nền tảng học tập trực tuyến hiện đại, giúp bạn kết nối và học tập mọi lúc mọi nơi.</p>

            <div class="mt-4">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    if (User.IsInRole("teacher"))
                    {
                        <a href="/teacher/class/home" class="btn btn-light btn-lg rounded-pill me-2 shadow">Bắt đầu ngay (Giáo viên)</a>
                    }
                    else if (User.IsInRole("student"))
                    {
                        <a href="/class/index" class="btn btn-light btn-lg rounded-pill me-2 shadow">Bắt đầu ngay (Học sinh)</a>
                    }
                    
                }
                else
                {
                    <a href="/account/selectrolebeforelogin" class="btn btn-light btn-lg rounded-pill me-2 shadow">Bắt đầu ngay</a>
                    <a href="/account/login" class="btn btn-outline-light btn-lg rounded-pill">Đăng nhập</a>
                }
            </div>
        </div>

        <div class="mt-4 mt-lg-0">
            <img src="~/img/class-image.jpg" alt="Learning Online" class="img-fluid" style="max-width: 450px;">
        </div>
    </div>
</section>


<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Tại sao chọn <span class="text-primary">Viroom</span>?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                        <h5 class="fw-bold">Dạy & học dễ dàng</h5>
                        <p>Kết nối học viên và giảng viên trong không gian trực tuyến mượt mà, dễ sử dụng.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5 class="fw-bold">Kết nối cộng đồng</h5>
                        <p>Tham gia nhóm học tập, thảo luận và chia sẻ kiến thức với bạn bè.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-lock fa-3x text-warning mb-3"></i>
                        <h5 class="fw-bold">An toàn & bảo mật</h5>
                        <p>Dữ liệu cá nhân và lớp học được bảo vệ bằng công nghệ bảo mật tiên tiến.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 text-center text-white" style="background: linear-gradient(135deg, #4f46e5, #7c3aed);">
    <div class="container">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <h2 class="fw-bold mb-3">Chào mừng trở lại, @User.Identity?.Name!</h2>

            @if (User.IsInRole("Teacher"))
            {
                <a href="/teacher/class/home" class="btn btn-light btn-lg rounded-pill shadow">Bắt đầu ngay (Giáo viên)</a>
            }
            else if (User.IsInRole("Student"))
            {
                <a href="/class/index" class="btn btn-light btn-lg rounded-pill shadow">Bắt đầu ngay (Học sinh)</a>
            }
            else
            {
                <a href="/user/home" class="btn btn-light btn-lg rounded-pill shadow">Bắt đầu ngay</a>
            }
        }
        else
        {
            <h2 class="fw-bold mb-3">Sẵn sàng bắt đầu hành trình học tập cùng Viroom?</h2>
            <a href="/account/selectrolebeforelogin" class="btn btn-light btn-lg rounded-pill shadow">Đăng ký ngay</a>
            <a href="/account/login" class="btn btn-outline-light btn-lg rounded-pill">Đăng nhập</a>
        }
    </div>
</section>

