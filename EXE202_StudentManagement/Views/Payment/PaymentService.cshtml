@model PaymentServiceViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gói Dịch Vụ - Viroom.com</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f8f9fa;
        }

        .header-section {
            background: linear-gradient(90deg, #c7d2fe, #a5b4fc, #818cf8);
            color: white;
            padding: 50px 0;
            border-radius: 0 0 20px 20px;
        }

        .pricing-card {
            border-radius: 1rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }

        .pricing-header {
            background: #f1f5f9;
            padding: 2rem;
        }

        .pricing-body ul li {
            padding: 0.75rem 0;
            border-bottom: 1px solid #e2e8f0;
        }

        .pricing-badge {
            font-size: 0.8rem;
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header-section text-center mb-5">
        <h1 class="display-5 fw-bold">Chọn Gói Dịch Vụ Phù Hợp</h1>
        <p class="lead">Viroom mang đến các gói dịch vụ linh hoạt để phù hợp với mọi nhu cầu quản lý lớp học của bạn.</p>
    </div>

    <!-- Pricing Section -->
    <div class="container py-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Gói Free -->
            <div class="col">
                <div class="card pricing-card text-center h-100">
                    <div class="card-header pricing-header">
                        <h4 class="my-0 fw-bold">Gói Free</h4>
                        <h1 class="card-title pricing-card-title mt-3">0<small class="text-muted fw-light">đ/tháng</small></h1>
                    </div>
                    <div class="card-body pricing-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>Tạo tối đa <strong>5</strong> lớp học</li>
                            <li><i class="fas fa-check text-success me-2"></i>Tối đa <strong>50</strong> học sinh mỗi lớp</li>
                            <li><i class="fas fa-check text-success me-2"></i>Quản lý bài tập & nhóm</li>
                            <li><i class="fas fa-times text-danger me-2"></i>Thống kê chi tiết</li>
                            <li><i class="fas fa-times text-danger me-2"></i>Hỗ trợ ưu tiên</li>
                        </ul>
                        <button type="button" class="w-100 btn btn-lg btn-outline-primary fw-bold" disabled>Gói hiện tại của bạn</button>
                    </div>
                </div>
            </div>

            <!-- Gói Pro (Tháng) -->
            <div class="col">
                <div class="card pricing-card text-center h-100 position-relative">
                    <div class="position-absolute top-0 start-50 translate-middle-x mt-1">
                        <span class="badge bg-primary rounded-pill pricing-badge">Phổ Biến</span>
                    </div>
                    <div class="card-header pricing-header">
                        <h4 class="my-0 fw-bold">Gói Pro</h4>
                        <h1 class="card-title pricing-card-title mt-3">50.000<small class="text-muted fw-light">đ/tháng</small></h1>
                    </div>
                    <div class="card-body pricing-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>Tạo tối đa <strong>50</strong> lớp học</li>
                            <li><i class="fas fa-check text-success me-2"></i>Số lượng học sinh **không giới hạn**</li>
                            <li><i class="fas fa-check text-success me-2"></i>Quản lý bài tập & nhóm đầy đủ</li>
                            <li><i class="fas fa-check text-success me-2"></i>Thống kê chi tiết</li>
                            <li><i class="fas fa-check text-success me-2"></i>Hỗ trợ ưu tiên</li>
                        </ul>
                        <form action="/payment/payQR" method="post">
							<input type="hidden" asp-for="Price" value="50000">
							<input type="hidden" asp-for="Username">
                            <button type="submit" class="w-100 btn btn-lg btn-primary fw-bold">Mua gói này</button>
                        </form>
                        
                    </div>
                </div>
            </div>

            <!-- Gói Pro (Năm) -->
            <div class="col">
                <div class="card pricing-card text-center h-100">
                    <div class="card-header pricing-header">
                        <h4 class="my-0 fw-bold">Gói Pro (Năm)</h4>
                        <h1 class="card-title pricing-card-title mt-3">300.000<small class="text-muted fw-light">đ/năm</small></h1>
                        <p class="text-success mt-2 mb-0">Tiết kiệm <span id="savings-amount">50%</span></p>
                    </div>
                    <div class="card-body pricing-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>Tạo tối đa <strong>50</strong> lớp học</li>
                            <li><i class="fas fa-check text-success me-2"></i>Số lượng học sinh **không giới hạn**</li>
                            <li><i class="fas fa-check text-success me-2"></i>Quản lý bài tập & nhóm đầy đủ</li>
                            <li><i class="fas fa-check text-success me-2"></i>Thống kê chi tiết</li>
                            <li><i class="fas fa-check text-success me-2"></i>Hỗ trợ ưu tiên</li>
                        </ul>

                        <form action="/payment/payQR" method="post">
                            <input type="hidden" asp-for="Price" value="300000">
                            <input type="hidden" asp-for="Username">
                            <button type="submit" class="w-100 btn btn-lg btn-primary fw-bold">Mua gói này</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tinh toan so tien tiet kiem
            const monthlyPrice = 50000;
            const yearlyPrice = 300000;
            const monthlyTotal = monthlyPrice * 12;
            const savings = monthlyTotal - yearlyPrice;
            const savingsPercent = Math.round((savings / monthlyTotal) * 100);

            document.getElementById('savings-amount').textContent = `${savingsPercent}%`;
        });
    </script>
</body>
</html>
