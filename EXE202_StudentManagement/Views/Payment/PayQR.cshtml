@model PaymentServiceViewModel
@using System.Globalization

@{
    Layout = "_PaymentLayout";
}
@section Styles{
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f8f9fa;
        }

        .payment-container {
            max-width: 900px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        }
    </style>
}

    <div class="container payment-container">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h1 class="fw-bold">Thanh Toán Gói Dịch Vụ</h1>
                <p class="text-muted">Vui lòng quét mã QR để hoàn tất thanh toán và nâng cấp tài khoản của bạn.</p>
            </div>
        </div>
        <div class="row">
            <!-- Hướng dẫn thanh toán -->
            <div class="col-md-6 mb-4">
                <h4 class="fw-bold text-primary">Hướng dẫn thanh toán</h4>
                <ul class="list-group list-group-flush mt-3">
                    <li class="list-group-item">
                        <span class="fw-bold text-primary me-2">1.</span> Mở ứng dụng ngân hàng của bạn.
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold text-primary me-2">2.</span> Chọn chức năng quét mã QR.
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold text-primary me-2">3.</span> Quét mã QR ở bên phải.
                    </li>
                    <li class="list-group-item">
                    <span class="fw-bold text-primary me-2">4.</span> Đảm bảo nội dung chuyển khoản là <strong>"@(Model.Username)_Virroom_@(Model.Description)"</strong> để nhân viên xác nhận chính xác giao dịch.
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold text-primary me-2">5.</span> Hoàn tất giao dịch. Gửi hóa đơn thanh toán vào đoạn chat tại góc dưới bên phải màn hình.
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold text-primary me-2">6.</span> Trong vòng 24h, nhân viên sẽ phản hồi và cập nhập trạng thái tài khoản của khách hàng.
                    </li>
                </ul>
            </div>
            <!-- Mã QR và thông tin -->
            <div class="col-md-6 text-center">
                <h4 class="fw-bold text-primary">Thông tin thanh toán</h4>
                <div class="d-flex justify-content-center mt-3">
                    <img src="https://img.vietqr.io/image/MB-0347818511-compact2.jpg?amount=@Model.Price&addInfo=@(Model.Username)_Virroom_@(Model.Description)&accountName=@Model.Username/"
                         alt="Mã QR Thanh Toán" class="img-fluid rounded" style="max-height: 350px;">
                </div>
                <div class="mt-4">
                    <p class="fw-bold mb-1">Số tiền:</p>
                    <h3 class="text-success fw-bold">
                        @string.Format(new CultureInfo("vi-VN"), "{0:N0} VNĐ", Model.Price)
                    </h3>
                    <p class="fw-bold mb-1 mt-3">Nội dung chuyển khoản:</p>
                    <code class="p-2 rounded bg-light fw-bold text-danger">@(Model.Username)_Virroom_@(Model.Description)</code>
                </div>
            </div>
        </div>
    </div>
@section Scripts{
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script> *@
}
    