@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

@{
    Layout = null;
    var user = await UserManager.GetUserAsync(User);
    var userName = user?.UserName ?? "Teacher";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viroom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <header>
        <div class="d-flex align-items-center">
            <button id="menuToggle" class="btn btn-light me-2"><i class="fas fa-bars"></i></button>
            <a id="brandLink" class="brand" asp-area="" asp-controller="Home" asp-action="TeacherHome">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>VIROOM</span>
            </a>
        </div>

        <div class="d-flex align-items-center">
            <div class="me-2">Xin chào, @userName</div>
            <div class="dropdown">
                <a class="btn btn-light dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="fas fa-user"></i></a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Hồ sơ</a></li>
                    <li>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="dropdown-item">Đăng xuất</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="page-frame">
        <nav id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="teacher/class/home" data-page="Home">
                        <i class="fas fa-home"></i>
                        <span class="link-text">Trang chủ</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-page="Class">
                        <i class="fas fa-users"></i>
                        <span class="link-text">Quản lý lớp</span>
                    </a>
                </li>
            </ul>
        </nav>

        <main class="main-content">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer>
        © 2025 Viroom copyright.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script> window.viewActivePage = '@(ViewData["ActivePage"] ?? "")'; </script>
    <script src="~/js/sidebar.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
