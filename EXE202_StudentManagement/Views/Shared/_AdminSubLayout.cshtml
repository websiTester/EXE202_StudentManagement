@inject SignInManager<User> _signInManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viroom</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/guest-layout.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .profile-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: black;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            background-color: rgba(255, 255, 255, 0.2);
            transition: background-color 0.3s ease;
        }

            .profile-link:hover {
                background-color: rgba(255, 255, 255, 0.4);
            }

            .profile-link img {
                margin-right: 0.5rem;
            }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="guest-header py-3 border-bottom">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="navbar-brand fw-bold fs-4">Viroom</a>
            <div class="auth-links">
                @if (_signInManager.IsSignedIn(User))
                {
                    <a class="profile-link" href="/account/profile">
                        <img style="width: 25px;height: 25px;border-radius: 50%"
                             src="~/img/avarta.png" alt="" />Hello, @User.Identity.Name
                    </a>
                    <a href="/account/logout" class="btn btn-primary">Đăng xuất</a>
                } else
                {
                    <a href="/Account/Login" class="btn btn-outline-primary me-2">Đăng nhập</a>
                    <a href="/Account/SelectRoleBeforeLogin" class="btn btn-primary">Đăng kí</a>
                }
               
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="page-frame">
            <main class="main-content">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </main>
        </div>
    </main>

    <footer class="guest-footer text-center py-4 bg-light mt-5">
        <p class="mb-0">&copy; 2025 Viroom. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
