<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viroom</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/guest-layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="guest-header py-3 border-bottom">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="navbar-brand fw-bold fs-4">Viroom</a>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <!-- Nếu đã đăng nhập -->
                <div class="dropdown">
                    <a class="btn btn-outline-secondary dropdown-toggle" href="#" id="userMenu" data-bs-toggle="dropdown">
                        <i class="fa fa-user-circle me-1"></i> @User.Identity.Name
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <!-- Nếu chưa đăng nhập -->
                <div class="auth-links">
                    <a href="/account/login" class="btn btn-outline-primary me-2">Sign in</a>
                    <a href="/account/selectrolebeforelogin" class="btn btn-primary">Sign up</a>
                </div>
            }
        </div>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="guest-footer text-center py-4 bg-light mt-5">
        <p class="mb-0">&copy; 2025 Viroom. All rights reserved.</p>
    </footer>

    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
        var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
        (function(){
        var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
        s1.async=true;
        s1.src='https://embed.tawk.to/68ce6704fce9651920a06920/1j5j44ql8';
        s1.charset='UTF-8';
        s1.setAttribute('crossorigin','*');
        s0.parentNode.insertBefore(s1,s0);
        })();
    </script>
    <!--End of Tawk.to Script-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
