@model List<User>

@section Styles{
    <style>
        body {
            background-color: #f8f9fa;
        }

        /* .container {
            margin-top: 50px;
        } */

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .action-btns {
            display: flex;
            align-items: center;
        }

        .action-btn {
            border: none;
            background: none;
            cursor: pointer;
            padding: 0;
            margin: 0 5px;
        }
    </style>
}
@{
    Layout = "_AdminLayout";
}
    <div class="container">
        <h2 class="text-center mb-4">Quản Lý Người Dùng</h2>
        @if (ViewBag.UpdateSuccess != null)
        {
            <p class="text-center text-primary">Cập nhập thành công</p>
        }

        <div class="table-container">
        <form class="d-flex mb-4" action="/admin/filteruser" method="post">
            
                <input name="username" type="text" class="form-control me-2" placeholder="Tìm kiếm người dùng...">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            
        </form>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Username</th>
                            <th>Họ và Tên</th>
                            <th>Email</th>
                            <th>Trạng thái tài khoản</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="user-table-body">
                        @{
                            int i = 1;
                        }
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@user.UserName</td>
                                <td>@(user.FirstName + " " + user.LastName)</td>
                                <td>@user.Email</td>
                                <td>

                                    <select asp-for="@user.AccountStatus" class="form-select user-status-select" name="status">
                                        <option value="1">Free</option>
                                        <option value="2">Pro (Tháng)</option>
                                        <option value="3">Pro (Năm)</option>
                                    </select>


                                </td>
                                <td class="action-btns">
                                    <form action="/admin/updateUserStatus" method="post" class="save-form d-inline">
                                        <input type="hidden" name="username" value="@user.UserName">
                                        <input type="hidden" name="accountStatus" value="1">
                                        <button type="submit" class="action-btn">
                                            <i class="fas fa-save text-success" title="Lưu"></i>
                                        </button>
                                        <a href="#" class="action-btn view-btn">
                                            <i class="fas fa-eye text-info" title="Xem chi tiết"></i>
                                        </a>
                                    </form>

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>



    @section Scripts{
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.querySelectorAll(".user-status-select").forEach(function (select) {
                    select.addEventListener("change", function () {
                        // tìm đến hàng <tr> chứa select này
                        let row = select.closest("tr");

                        // tìm input hidden trong form cùng hàng
                        let hiddenInput = row.querySelector('input[name="accountStatus"]');

                        if (hiddenInput) {
                            hiddenInput.value = select.value; // cập nhật giá trị
                        }
                    });
                });
            });
        </script>
    }
   