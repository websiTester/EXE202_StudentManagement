@model GroupDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết nhóm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@Model.GroupName - @Model.AssignmentTitle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(90deg, #e0e7ff, #c7d2fe, #a5b4fc);
            min-height: 100vh;
        }

        .task-tag {
            display: inline-block;
            padding: 2px 10px;
            font-size: 12px;
            font-weight: 500;
            border-radius: 9999px;
            line-height: 1.5;
        }

        .task-todo {
            background-color: #f3f4f6;
            color: #4b5563;
        }

        .task-doing {
            background-color: #fef9c3;
            color: #a16207;
        }

        .task-done {
            background-color: #dcfce7;
            color: #166534;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="bg-white bg-opacity-80 shadow-sm sticky top-0 z-50 backdrop-blur-sm">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <i class="fas fa-users text-2xl text-indigo-500"></i>
                <h1 class="text-2xl font-bold text-gray-800">Viroom</h1>
            </div>
            <nav class="flex items-center space-x-6">
                <a href="/Group/List" class="text-gray-600 hover:text-indigo-500 font-medium transition duration-200">Bảng điều khiển</a>
                <a href="#" class="text-gray-600 hover:text-indigo-500 font-medium transition duration-200">Thông báo</a>
                <a href="#" class="text-gray-600 hover:text-indigo-500 font-medium transition duration-200">Hồ sơ</a>
            </nav>
            <div class="flex items-center space-x-4">
                <span class="text-gray-700 font-medium">Xin chào, @User.Identity?.Name</span>
                <i class="fas fa-user-circle text-3xl text-gray-500"></i>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8 flex-grow">
        <div id="grading-panel">
            <div class="mb-6">
                <a href="/Group/List" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium mb-4">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Trở về danh sách nhóm
                </a>
                <h2 class="text-3xl font-bold text-gray-800">@Model.GroupName</h2>
                <p class="text-gray-600">Chi tiết bài nộp: @Model.AssignmentTitle</p>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6">
                <!-- Submitted File Section -->
                <div class="bg-indigo-50 rounded-lg p-4 mb-6 flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-file-archive text-2xl text-indigo-500"></i>
                        <div>
                            <p class="font-semibold text-gray-700">Tài liệu đã nộp:</p>
                            <p class="text-sm text-indigo-700">
                                @(Model.Members.FirstOrDefault(m => !string.IsNullOrEmpty(m.SubmitLink))?.SubmitLink ?? "Chưa có")
                            </p>
                        </div>
                    </div>
                    @if (Model.Members.Any(m => !string.IsNullOrEmpty(m.SubmitLink)))
                    {
                        var link = Model.Members.First(m => !string.IsNullOrEmpty(m.SubmitLink)).SubmitLink;
                        <a href="@link" download class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200 flex items-center space-x-2">
                            <i class="fas fa-download"></i>
                            <span>Tải về</span>
                        </a>
                    }
                </div>

                <!-- Member Evaluation Section -->
                <h4 class="text-lg font-semibold text-gray-700 mb-4">Đánh giá thành viên</h4>

                <form asp-action="SaveEvaluation" method="post">
                    <input type="hidden" name="GroupId" value="@Model.GroupId" />
                    <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />

                    <div class="space-y-6">
                        @foreach (var member in Model.Members)
                        {
                            var todo = member.Tasks.Count(t => t.Status == "TODO");
                            var doing = member.Tasks.Count(t => t.Status == "DOING");
                            var done = member.Tasks.Count(t => t.Status == "DONE");

                            <div class="grid grid-cols-1 md:grid-cols-7 gap-4 items-start border-t border-gray-200 pt-4">
                                <div class="md:col-span-4">
                                    <p class="font-semibold text-gray-800">@member.FullName</p>

                                    <!-- Summary View -->
                                    <div class="mt-2 flex items-center space-x-6">
                                        <div class="text-center"><p class="text-xl font-bold text-gray-500">@todo</p><p class="text-xs text-gray-400 uppercase">Cần làm</p></div>
                                        <div class="text-center"><p class="text-xl font-bold text-yellow-500">@doing</p><p class="text-xs text-gray-400 uppercase">Đang làm</p></div>
                                        <div class="text-center"><p class="text-xl font-bold text-green-500">@done</p><p class="text-xs text-gray-400 uppercase">Hoàn thành</p></div>
                                        <button type="button" class="view-details-btn ml-auto text-sm text-indigo-600 hover:text-indigo-800 font-medium" data-target="member-@member.StudentId-details">Xem chi tiết</button>
                                    </div>

                                    <!-- Detailed View -->
                                    <div id="member-@member.StudentId-details" class="mt-4 space-y-3 hidden border-t border-gray-200 pt-3">
                                        <div>
                                            <p class="text-xs font-semibold text-gray-400 uppercase">CẦN LÀM (@todo)</p>
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                @foreach (var t in member.Tasks.Where(t => t.Status == "TODO"))
                                                {
                                                    <span class="task-tag task-todo">@t.Title</span>
                                                }
                                                @if (todo == 0)
                                                {
                                                    <span class="text-xs text-gray-400 italic">Không có</span>
                                                }
                                            </div>
                                        </div>
                                        <div>
                                            <p class="text-xs font-semibold text-yellow-500 uppercase">ĐANG LÀM (@doing)</p>
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                @foreach (var t in member.Tasks.Where(t => t.Status == "DOING"))
                                                {
                                                    <span class="task-tag task-doing">@t.Title</span>
                                                }
                                                @if (doing == 0)
                                                {
                                                    <span class="text-xs text-gray-400 italic">Không có</span>
                                                }
                                            </div>
                                        </div>
                                        <div>
                                            <p class="text-xs font-semibold text-green-500 uppercase">HOÀN THÀNH (@done)</p>
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                @foreach (var t in member.Tasks.Where(t => t.Status == "DONE"))
                                                {
                                                    <span class="task-tag task-done">@t.Title</span>
                                                }
                                                @if (done == 0)
                                                {
                                                    <span class="text-xs text-gray-400 italic">Không có</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="md:col-span-1">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Điểm</label>
                                    <input type="number" name="Members[@Model.Members.IndexOf(member)].Score" value="@member.Score" min="0" max="10" step="0.5" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder=".../10" />
                                    <input type="hidden" name="Members[@Model.Members.IndexOf(member)].StudentId" value="@member.StudentId" />
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Nhận xét</label>
                                    <textarea name="Members[@Model.Members.IndexOf(member)].Comment" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="Thêm nhận xét...">@member.Comment</textarea>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-8 text-right">
                        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200">
                            <i class="fas fa-save mr-2"></i>Lưu đánh giá
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white bg-opacity-80 text-gray-800 py-6 mt-auto">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; 2024 Viroom.com. Tất cả quyền được bảo lưu.</p>
        </div>
    </footer>

    <script>
        document.querySelectorAll('.view-details-btn').forEach(button => {
            button.addEventListener('click', () => {
                const targetId = button.dataset.target;
                const detailsPanel = document.getElementById(targetId);
                if (detailsPanel) {
                    const isHidden = detailsPanel.classList.contains('hidden');
                    detailsPanel.classList.toggle('hidden');
                    button.textContent = isHidden ? 'Ẩn chi tiết' : 'Xem chi tiết';
                }
            });
        });
    </script>
</body>
</html>
