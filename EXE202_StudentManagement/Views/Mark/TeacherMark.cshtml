    <script>
        // Handle form submission alert
        document.getElementById('evaluation-form').addEventListener('submit', (event) => {
            event.preventDefault();
            console.log("Form submitted.");
            showCustomAlert('Đã lưu đánh giá thành công!');
        });

        // Add functionality for "View Details" buttons
        document.querySelectorAll('.view-details-btn').forEach(button => {
            button.addEventListener('click', () => {
                const targetId = button.dataset.target;
                const detailsPanel = document.getElementById(targetId);
                if (detailsPanel) {
                    const isHidden = detailsPanel.classList.contains('hidden');
                    if (isHidden) {
                        detailsPanel.classList.remove('hidden');
                        button.textContent = 'Ẩn chi tiết';
                    } else {
                        detailsPanel.classList.add('hidden');
                        button.textContent = 'Xem chi tiết';
                    }
                }
            });
        });

        // Function to show custom alert
        function showCustomAlert(message) {
            const existingAlert = document.querySelector('.custom-alert');
            if (existingAlert) existingAlert.remove();

            const alertBox = document.createElement('div');
            alertBox.className = 'custom-alert fixed top-5 right-5 bg-white rounded-lg shadow-xl p-4 flex items-center space-x-3 z-[100]';
            alertBox.style.cssText = 'animation: slideIn 0.3s ease-out;';
            alertBox.innerHTML = `
                <div class="text-green-500 text-2xl"><i class="fas fa-check-circle"></i></div>
                <p class="font-semibold text-gray-800">${message}</p>`;
            document.body.appendChild(alertBox);

            setTimeout(() => {
                alertBox.style.animation = 'fadeOut 0.5s ease-in-out forwards';
                setTimeout(() => alertBox.remove(), 500);
            }, 3000);
        }
    </script>
    
